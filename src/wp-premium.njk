---
 layout: wp-base.njk
 title: PREMIUM THEMES & PLUGINS
---
<div class="bg-white pt-16">
<section class="container ">
    <p class="text-center text-5xl pb-16">FREE PLUGINS</p>
    <div class="px-[10%]  rounded-3xl bg-gray-200 w-full py-4 text-gray-400 text-lg mt-4">
      
    <ul class="grid grid-cols-3 gap-6 w-full py-16 ">

        {% for plugin in collections.plugin %}
        <a href="{{plugin.url}}">
            <li class="bg-white p-8 rounded-3xl  h-auto shadow shadow-xl">
                <img src="{{plugin.data.image}}" alt="{{plugin.data.image-alt}}" class="w-[300px] ">
                <div>
                    <p class="text-sky-800 pt-6 pb-4 text-2xl">{{plugin.data.title}}</p>
                    <p class="text-zinc-900">{{plugin.data.type}}</p>
                </div>

            </li>

        </a>
        {% endfor %}
    </ul>  
    
    
    </div>
    
    
    
</section>
</div>