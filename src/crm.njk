<section class="container ">
    <div class="px-[10%]  rounded-3xl bg-zinc-950/50 w-full py-4 text-gray-400 text-lg mt-4">
    <ul class="grid grid-cols-3 gap-6 w-full py-16">

        {% for crm in collections.crm %}
        <a href="{{crm.url}}">
            <li class="bg-zinc-900 p-8 rounded-3xl  h-80">
                <img src="{{crm.data.image}}" alt="{{image-alt}}" class="w-36 rounded-full">
                <div>
                    <p class="text-sky-500 pt-6 pb-4 text-2xl">{{crm.data.title}}</p>
                    <p>{{crm.data.description}}</p>
                </div>

            </li>

        </a>
        {% endfor %}
    </ul>  
    
    
    </div>
    
    
    
</section>